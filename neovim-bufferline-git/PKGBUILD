# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=neovim-bufferline-git
_pkgname=neovim-bufferline
pkgver=r255.78ffd34
pkgrel=1
arch=('any')
url='https://github.com/akinsho/nvim-bufferline.lua'
license=('MIT')
makedepends=('git')
pkgdesc="Adds file type icons to Neovim plugins"
depends=('neovim' 'neovim-web-devicons')
provides=("${_pkgname}")
conflicts=("${_pkgname}")
source=("${_pkgname}::git+${url}.git")
sha256sums=('SKIP')

pkgver() {
	cd "${srcdir}/${_pkgname}"
	printf "r%s.%s" "$(git rev-list --count HEAD)" \
		"$(git rev-parse --short HEAD)"
}

package() {
	cd "${srcdir}/${_pkgname}"
	find autoload doc lua plugin -type f -exec \
		install -Dm 644 '{}' "${pkgdir}/usr/share/nvim/runtime/{}" \;
	install -Dm 644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}
