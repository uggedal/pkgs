pkgname=cfg-productivity
pkgver=0.0.3
pkgrel=1
pkgdesc="Productivity configuration"
arch=(any)
url="https://uggedal.com"
license=(Unlicense)
depends=(
	cfg-cli
	vim-taskwiki-git
)

rootdir="$PWD"

package() {
	install -D -m644 "$rootdir/productivity.vim" \
		"$pkgdir/etc/vim/vim.local.d/productivity.vim"
}
