# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=cfg-base
pkgver=0.0.9
pkgrel=1
pkgdesc="Base configuration"
arch=(any)
url="https://uggedal.com"
license=(Unlicense)
depends=(man-db sudo)
install=cfg-base.install

rootdir="$PWD"

package() {
	install -D -m755 "$rootdir/pkgoverride" "$pkgdir/usr/bin/pkgoverride"

	install -D -m644 "$rootdir/locale.conf" "$pkgdir/etc/locale.conf"
	install -D -m644 "$rootdir/profile.sh" "$pkgdir/etc/profile.d/base.sh"
	install -D -m644 "$rootdir/input.local.rc" "$pkgdir/etc/input.local.rc"
	install -D -m644 "$rootdir/bashrc" "$pkgdir/etc/bash.bashrc.d/base.sh"

	install -d -m750 "$pkgdir/etc/sudoers.d"
	install -m640 "$rootdir/wheel.sudoers" "$pkgdir/etc/sudoers.d/wheel"
}
