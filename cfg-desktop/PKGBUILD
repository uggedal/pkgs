# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=cfg-desktop
pkgver=0.1.1
pkgrel=1
pkgdesc="Desktop configuration"
arch=(any)
url="https://uggedal.com"
license=(Unlicense)
depends=(
	firefox
	fzy
	grim
	imv
	kitty
	mako
	pipewire-pulse
	slurp
	sway
	swayidle
	swaylock
	ttf-dejavu
	ttf-ibm-plex
	waybar
	wl-clipboard
	wlsunset
	xdg-utils
)

rootdir="$PWD"

package() {
	install -D -m644 "$rootdir/profile.sh" "$pkgdir/etc/profile.d/desktop.sh"
	install -D -m644 "$rootdir/bashrc" "$pkgdir/etc/bash.bashrc.d/desktop.sh"

	install -D -m755 "$rootdir/kitty_menu" "$pkgdir/usr/bin/kitty_menu"

	install -D -m644 "$rootdir/swayidle.service" \
		"$pkgdir//usr/lib/systemd/user/swayidle.service"
	install -D -m644 "$rootdir/wlsunset.service" \
		"$pkgdir//usr/lib/systemd/user/wlsunset.service"
}
