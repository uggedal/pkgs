pkgname=cfg-storage
pkgver=0.0.3
pkgrel=1
pkgdesc="Storage configuration"
arch=(any)
url="https://uggedal.com"
license=(Unlicense)
depends=(
	compsize
	hdparm
	smartmontools
)
install=cfg-storage.install

rootdir="$PWD"

package() {
	install -D -m644 "$rootdir/smartd.conf" "$pkgdir/usr/share/pacman/override/smartd.conf"
}
