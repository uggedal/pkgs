# Maintainer: Eivind Uggedal <eivind@uggedal.com>
pkgname=cfg-pkg
pkgver=0.0.3
pkgrel=1
pkgdesc="Packaging configuration"
arch=(any)
url="https://uggedal.com"
license=(Unlicense)
depends=(
	autoconf
	automake
	bison
	devtools
	flex
	gcc
	make
	patch
	pkgconf
	which
)

rootdir="$PWD"

package() {
	install -D -m644 "$rootdir/bashrc" "$pkgdir/etc/bash.bashrc.d/pkg.sh"
}
