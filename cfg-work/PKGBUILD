pkgname=cfg-work
pkgver=0.0.5
pkgrel=1
pkgdesc="CLI configuration"
arch=(any)
url="https://uggedal.com"
license=(Unlicense)
depends=(
	azure-cli
	cfg-productivity
	git-crypt
	go
	teams
	tokei
	xorg-xwayland
)

rootdir="$PWD"

package() {
	install -D -m755 "$rootdir/vimwiki-work-diary-template" \
		"$pkgdir/usr/bin/vimwiki-work-diary-template"

	install -D -m644 "$rootdir/work.vim" \
		"$pkgdir/etc/vim/vim.local.d/work.vim"
}
